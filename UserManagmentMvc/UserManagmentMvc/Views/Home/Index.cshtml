@using UserManagmentMvc.Extensions
@model   IEnumerable<UserManagmentMvc.Models.ViewModel.UserVM>


@{
    ViewBag.Title = "Index";
}

<div>
    <div class="row">
        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add", "Create", "Home", null, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>

                    <th scope="col">
                        @Html.mDisplayNameFor(m => m.Name)
                    </th>
                    <th scope="col">
                        @Html.mDisplayNameFor(m => m.MidleName)
                    </th>
                    <th scope="col">
                        @Html.mDisplayNameFor(m => m.MidleName)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.MidleName</td>
                    <td>@item.MidleName</td>

                    <td>
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Home", routeValues: new { id = item.ID }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                   
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-remove'></span>", "Delete", "Delete", "Home", routeValues: new { id = item.ID }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })


                    </td>

                </tr>
            }
        </table>
    }
</div>



<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="itemid" />
                <h6>Are you sure that you want to delete this?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="Delete" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>


<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>