@model UserManagmentMvc.Models.ViewModel.UserVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel"> @ViewBag.ModalTitle </h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)

        <div class="form-horizontal" role="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MidleName, htmlAttributes: new { @class = "control-label col-sm-3" })

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.MidleName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MidleName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-sm-3" })

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsEmployed, htmlAttributes: new { @class = "control-label col-sm-3" })

                <div class="col-sm-9">
                    @Html.CheckBoxFor(model => model.IsEmployed)
                    @Html.ValidationMessageFor(model => model.IsEmployed, "", new { @class = "text-danger" })
                </div>
            </div>

           <div class="form-group">
                @Html.LabelFor(model => model.OrganisationName, htmlAttributes: new { @class = "control-label col-sm-3" })

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.OrganisationName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OrganisationName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StartOnUTc, htmlAttributes: new { @class = "control-label col-sm-3" })

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.StartOnUTc, new { @Value = DateTime.Now.ToString("dd/MM/yyyy"), @class = "form-control  datepicker" })
                    @Html.ValidationMessageFor(model => model.StartOnUTc, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
}

<script>
    $(document).ready(function () {
        $('.datepicker').datetimepicker({
            format: 'd/m/Y',
            timepicker: false
        });
    });
</script>
